<h1>#<%= @game.gamename %></h1>
<div id="button_interactions" data-game-id="<%= @game.id %>">
  <% @game.button_interactions.each do |button_interaction| %>
    <%= render 'button_interactions/button_interactions_log', button_interaction: button_interaction %>
  <% end %>

<div class="container">
  <div class="gamepad" >
    <%= simple_form_for [ @game, @button_interaction ], remote: true do |f| %>
      <%# <div class="cross"> %>
        <h2 id="cross-left">
          <%= f.button :submit, "Left", class: "btn btn-secondary" %><%#i class="far fa-caret-square-left"></i%>
        </h2>
        <h2 id="cross-up">
          <%# <%= f.input :keypressed, as :submit, input_html: {value: "up"} %>
          <%= f.button :submit, "UP",  class: "btn btn-secondary" %>

        </h2>
        <h2 id="cross-down">
          <%# <%= f.input :keypressed, as: :submit, input_html: {value: "ARROWDOWN"} %>
          <%= f.button :submit, "DOWN",  class: "btn btn-secondary" %><%#i class="far fa-caret-square-down"></i%>
        </h2>
        <h2 id="cross-right">
          <%= f.button :submit, "RIGHT",  class: "btn btn-secondary" %><%#i class="far fa-caret-square-right"></i%>
        </h2>
      </div>

      <div class="circlebuttons">
        <h2 id="buttonA">
          <%= f.button :submit, "A", class: "btn btn-danger btn-circle btn-lg" %>
        </h2>
         <h2 id="buttonB">
            <%= f.button :submit, "B", class: "btn btn-danger btn-circle btn-lg"%>
        </h2>
      </div>
    <% end %>
  </div>
</div>





