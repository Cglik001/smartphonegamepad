<div class="game-pad-test-container" >
  <div class="game-pad-test" >
    <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
      <h2 class ="arrowleftbutton">
        <input type="radio" class="btn-check" name="btnradio" id="btnradio1" value="e.keyCode == 37" autocomplete="off" checked>
         <%# <%= f.input :keypressed, as :submit, input_html: {value: "true"} %>
        <label class="btn btn-dark" for="btnradio1">Arrow Left</label>
      </h2>
      <h2 class="arrowdownbutton">
        <input type="radio" class="btn-check" name="btnradio" id="btnradio2" autocomplete="off">
        <label class="btn btn-dark" for="btnradio2">Arrow Down</label>
      </h2>
      <h2 class="arrowupbutton">
        <input type="radio" class="btn-check" name="btnradio" id="btnradio3" autocomplete="off">
        <label class="btn btn-dark" for="btnradio3">Arrow Up</label>
      </h2>
      <h2 class="arrowrightbutton">
        <input type="radio" class="btn-check" name="btnradio" id="btnradio4" autocomplete="off">
        <label class="btn btn-dark" for="btnradio4">Arrow Right</label>
      </h2>
      <h2 class="a-button">
          <input type="radio" class="btn-check" name="btnradio" id="btnradio5" autocomplete="off">
          <label class="btn btn-outline-primary" id="a-button" for="btnradio5">A</label>
      </h2>
       <h2 class="b-button">
          <input type="radio" class="btn-check" name="btnradio" id="btnradio6" autocomplete="off">
          <label class="btn btn-outline-primary" id="b-button" for="btnradio6">B</label>
      </h2>
    </div>
  </div>
</div>

